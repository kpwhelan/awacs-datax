{% extends "base.twig" %}
{% block title %}DataX - Feed Groups{% endblock %}
{% block content %}

    <div id="tool-content">
        <div id="title">
            <h1>Feed Groups</h1>
        </div>
        <div id="purpose">
            <div>
                <p>With this tool you can view DataX Feed Groups</p>
            </div>
        </div>
        <div id="feed-groups-controls">
            {% if user_has_access(user, constant('TraderInteractive\\Area::DATAX'), constant('TraderInteractive\\Privilege::WRITE'), host) %}
                <button id="create-feed-group-button">
                    <span class="create-icon"></span>
                    <span>Create Feed Group</span>
                </button>
            {% endif %}
        </div>
    </div>

    {% include "datax/feeds/groups/table.twig" %}

    {% include "datax/feeds/groups/form.twig" %}

    {% include "loading-animation-modal.twig" with {hidden: 'false'} %}

{% endblock %}

